MMU_0000				= 0
MMU_2000				= 1
MMU_4000				= 2
MMU_6000				= 3
MMU_8000				= 4
MMU_A000				= 5
MMU_C000				= 6
MMU_E000				= 7

RES_256x192				= 0
RES_320x256				= 1
RES_640x256				= 2

INCLUDE "zconfig.def"

BANKSIZE_16K			= 16384
BANKSIZE_8K				= 8192

TILE_X					= 8
TILE_Y					= 8
TILE_SIZE				= (TILE_X * TILE_Y)
TILE_BANK_COUNT			= (BANKSIZE_16K / TILE_SIZE)

IF SCREEN_RES = RES_256x192
SCREEN_X				= 256
SCREEN_Y				= 192
ELIF SCREEN_RES = RES_320x256
SCREEN_X				= 320
SCREEN_Y				= 256
ELIF SCREEN_RES = RES_640x256
SCREEN_X				= 640
SCREEN_Y				= 256
ENDIF

SCREEN_SIZE				= (SCREEN_X * SCREEN_Y)
SCREEN_TILES_X			= (SCREEN_X / TILE_X)
SCREEN_TILES_Y			= (SCREEN_Y / TILE_Y)
SCREEN_TILES_COUNT		= (SCREEN_TILES_X * SCREEN_TILES_Y)

SCREEN_BANK_X			= (BANKSIZE_16K / SCREEN_Y)
SCREEN_BANK_Y			= (BANKSIZE_16K / SCREEN_X)

; Attribute bits
; 7-4 = palette offset
TILEMAP_ATTRIBUTE_X_MIRROR		= $08
TILEMAP_ATTRIBUTE_Y_MIRROR		= $04
TILEMAP_ATTRIBUTE_ROTATE		= $02

REG_LAYER_2_OFFSET_X			= $16
REG_LAYER_2_OFFSET_X_H			= $71
REG_LAYER_2_OFFSET_Y			= $17

